<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UpdateNoteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/saveButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/untitled"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/saveButton"
            android:textSize="20sp">

        </TextView>

        <ImageView
            android:id="@+id/panelButton2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_hexagon_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>

        <ImageView
            android:id="@+id/panelButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/light_down_with_feather_pen_svgrepo_com"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

